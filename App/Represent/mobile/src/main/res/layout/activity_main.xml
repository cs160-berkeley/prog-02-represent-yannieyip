<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.cs160.joleary.represent.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPRESENT!"
        android:textSize="30sp"
        android:id="@+id/appTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW DISTRICT REPRESENTATIVES BY"
        android:textSize="16sp"
        android:id="@+id/viewBy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/appTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location"
        android:textSize="30sp"
        android:id="@+id/currrentLocation"
        android:onClick="showOverview"
        android:layout_above="@+id/or"
        android:layout_alignStart="@+id/enterZipCode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="20sp"
        android:id="@+id/or"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/enterZipCode"
        android:text="ENTER ZIP CODE"
        android:textSize="30sp"
        android:layout_below="@+id/or"
        android:layout_alignEnd="@+id/appTitle" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/check"
        android:background="@drawable/green_checkmark2"
        android:onClick="showOverview"
        android:layout_alignBottom="@+id/enterZipCode"
        android:layout_alignEnd="@+id/currrentLocation" />

</RelativeLayout>
