<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs160.joleary.represent.Detailview">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/picture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="#b4b4b4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:id="@+id/name"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party"
        android:textSize="18sp"
        android:id="@+id/party"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Term Ends"
        android:textSize="18sp"
        android:id="@+id/termEnds"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committees Currently Serving:"
        android:textSize="18sp"
        android:id="@+id/comLabel"
        android:layout_marginTop="250dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committees"
        android:textSize="15sp"
        android:id="@+id/committees"
        android:layout_marginTop="270dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills Recently Sponsored:"
        android:textSize="18sp"
        android:id="@+id/billLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="360dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        android:textSize="15sp"
        android:id="@+id/bills"
        android:layout_marginTop="380dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
